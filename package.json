{
    "name": "my-project",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "dev": "cross-env NODE_OPTIONS='--disable-warning=DEP0174' nodemon --exec ts-node --project backend/tsconfig.json -r tsconfig-paths/register backend/index.ts",
        "build": "next build",
        "start": "cross-env NODE_OPTIONS='--disable-warning=DEP0174' NODE_ENV=production ts-node --project backend/tsconfig.json -r tsconfig-paths/register backend/index.ts",
        "start:prod": "prisma migrate deploy && npm run start",
        "lint:frontend": "next lint",
        "lint:frontend:fix": "next lint --fix",
        "lint:backend": "eslint backend",
        "lint:backend:fix": "eslint backend --fix",
        "lint": "npm run lint:frontend && npm run lint:backend",
        "lint:fix": "npm run lint:frontend:fix && npm run lint:backend:fix",
        "typecheck:web": "tsc --noEmit",
        "typecheck:backend": "tsc --noEmit --project backend/tsconfig.json",
        "typecheck": "npm run typecheck:web && npm run typecheck:backend",
        "db:reset": "rm -f prisma/dev.db && NODE_ENV=development ts-node --project backend/tsconfig.json -r tsconfig-paths/register prisma/seed.ts",
        "generate": "openapi-typescript ./api.json --output backend/generated/schema.ts",
        "postinstall": "patch-package"
    },
    "dependencies": {
        "@emotion/cache": "^11.14.0",
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@mui/icons-material": "^7.3.3",
        "@mui/material": "^7.3.3",
        "@mui/material-nextjs": "^7.3.3",
        "@prisma/client": "6.16.3",
        "@uidotdev/usehooks": "^2.4.1",
        "cookie-parser": "^1.4.7",
        "cross-env": "^10.1.0",
        "deepmerge": "^4.3.1",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "next": "15.5.4",
        "notistack": "^3.0.2",
        "openapi-fetch": "^0.14.1",
        "patch-package": "^8.0.1",
        "prisma": "^6.16.3",
        "react": "^19.0.0",
        "react-dom": "^19.2.0",
        "swagger-ui-express": "^5.0.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "type-fest": "^5.0.1",
        "typescript": "~5.9.3",
        "zustand": "^5.0.8"
    },
    "devDependencies": {
        "@eslint/compat": "^1.3.0",
        "@eslint/eslintrc": "^3",
        "@eslint/js": "^9.29.0",
        "@microsoft/eslint-formatter-sarif": "^3.1.0",
        "@types/cookie-parser": "^1.4.9",
        "@types/express": "^5.0.3",
        "@types/node": "^24",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "@types/swagger-ui": "^5.21.1",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/wait-on": "^5.3.4",
        "eslint": "^9",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^18.0.0",
        "eslint-config-next": "15.3.4",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-deprecation": "^3.0.0",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-mui-path-imports": "^0.0.15",
        "eslint-plugin-no-relative-import-paths": "^1.6.1",
        "eslint-plugin-prettier": "^5.5.0",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "nodemon": "^3.1.10",
        "openapi-typescript": "^7.8.0",
        "openapi-typescript-helpers": "^0.0.15",
        "prettier": "^3.6.0",
        "ts-node-dev": "^2.0.0",
        "typescript-eslint": "^8.34.1",
        "wait-on": "^8.0.3"
    },
    "engines": {
        "node": ">= 18.18"
    },
    "nodemonConfig": {
        "watch": [
            "./backend"
        ],
        "ignore": [
            ".next",
            "src"
        ],
        "ext": "ts,json"
    }
}
